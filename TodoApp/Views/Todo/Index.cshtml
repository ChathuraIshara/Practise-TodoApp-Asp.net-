@model List<Todo>
<div class="container">
    <div class="row mt-3 mb-5">
        <div class="col-11">
            <h1 class="text-center ">To Do List</h1>

        </div>
        <div class="col-1">
            <a class="btn btn-primary" asp-controller="Todo" asp-action="Create">Add To do</a>
        </div>
    </div>
  
    <div>

        @foreach (var obj in Model)
        {
            <div class="row">
                <div class="col-7">
                    <h2 class="text-dark">@obj.Title</h2>
                </div>
                <div class="col-2">
                    <a class="btn btn-dark" asp-controller="Todo" asp-action="Edit" asp-route-Id="@obj.Id">Edit</a>
                </div>
                <div class="col-2 ">
                    <a class="btn btn-danger" asp-controller="Todo" asp-action="delete" asp-route-Id="@obj.Id">Done</a>
                </div>
            </div>



        }

    </div>

</div>
